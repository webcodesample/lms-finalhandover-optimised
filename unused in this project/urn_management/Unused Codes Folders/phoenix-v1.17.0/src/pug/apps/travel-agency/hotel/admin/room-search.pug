          input.form-control.form-control-lg.border-translucent.input-spin-none.text-center.rounded(id="bathroom" type="number" value='2')
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="plus")
            span.fa-solid.fa-plus.px-1

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseRoomCategory' role='button' aria-expanded='false' aria-controls='collapseRoomCategory')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Room Category
    .collapse#collapseRoomCategory
      .border-bottom.pb-4(data-list!={
        valueNames: ["room"]
      })
        -
          var roomCategories = [
            "Any",
            "Deluxe King Room",
            "Deluxe Twin Room",
            "Junior King Suite",
            "One-Bedroom Deluxe Suite",
            "One-Bedroom Executive Suite",
            "Presidential Suite",
            "Club King Room",
            "Twin Room",
            "Club Twin Room",
            "Premium King Room",
            "Deluxe King Suite",
            "Executive King Suite",
