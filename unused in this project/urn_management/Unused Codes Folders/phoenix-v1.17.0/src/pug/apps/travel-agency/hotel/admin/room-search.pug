mixin FilterOptions
  .pe-1(data-collapse-all)
    .d-flex.align-items-center
      h3.text-body-highlight Filters
      button.btn.btn-phoenix-secondary.px-3.ms-auto.me-2.me-xl-0(data-btn-collapse-all) Collapse all
      button.btn.d-xl-none.p-0(data-phoenix-dismiss="offcanvas")
        span.uil.uil-times.fs-8

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapsePriceRange' role='button' aria-expanded='true' aria-controls='collapsePriceRange')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Price Range
    .collapse.show#collapsePriceRange
      .border-bottom.pb-4.pt-1
        .noUi-target-primary.noUi-handle-primary.noUi-slider-slim.noUi-handle-circle.bg-primary-subtle.px-2.mb-3(data-nouislider!={
          range: {
            'min': 500,
            'max': 2000
          },
          start: [699, 1299], 
          connect: true 
        })
        .row.g-2
          .col-6
            .form-floating
              input.form-control.input-spin-none(type='number' name='price-range-min' id='price-range-min' placeholder='Min' value='699')
              label(for='price-range-min') Min
          .col-6
            .form-floating
              input.form-control.input-spin-none(type='number' name='price-range-max' id='price-range-max' placeholder='Max' value='1299')
              label(for='price-range-max') Max

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseAdult' role='button' aria-expanded='true' aria-controls='collapseAdult')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Adult
    .collapse.show#collapseAdult
      .border-bottom.pb-4
        .input-group.gap-2(data-quantity)
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="minus")
            span.fa-solid.fa-minus.px-1
          input.form-control.form-control-lg.border-translucent.input-spin-none.text-center.rounded(id="adult" type="number" value='2')
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="plus")
            span.fa-solid.fa-plus.px-1

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseChild' role='button' aria-expanded='true' aria-controls='collapseChild')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Child
    .collapse.show#collapseChild
      .border-bottom.pb-4
        .input-group.gap-2(data-quantity)
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="minus")
            span.fa-solid.fa-minus.px-1
          input.form-control.form-control-lg.border-translucent.input-spin-none.text-center.rounded(id="child" type="number" value='2')
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="plus")
            span.fa-solid.fa-plus.px-1

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseBedroom' role='button' aria-expanded='true' aria-controls='collapseBedroom')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Bedroom
    .collapse.show#collapseBedroom
      .border-bottom.pb-4
        .input-group.gap-2(data-quantity)
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="minus")
            span.fa-solid.fa-minus.px-1
          input.form-control.form-control-lg.border-translucent.input-spin-none.text-center.rounded(id="bedroom" type="number" value='2')
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="plus")
            span.fa-solid.fa-plus.px-1

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseNumOfBed' role='button' aria-expanded='true' aria-controls='collapseNumOfBed')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Number of Bed
    .collapse.show#collapseNumOfBed
      .border-bottom.pb-4
        .input-group.gap-2(data-quantity)
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="minus")
            span.fa-solid.fa-minus.px-1
          input.form-control.form-control-lg.border-translucent.input-spin-none.text-center.rounded(id="numberOfBed" type="number" value='2')
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="plus")
            span.fa-solid.fa-plus.px-1

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseBathroom' role='button' aria-expanded='true' aria-controls='collapseBathroom')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Bathroom
    .collapse.show#collapseBathroom
      .border-bottom.pb-4
        .input-group.gap-2(data-quantity)
          button.btn.btn-phoenix-primary.px-3.rounded(data-type="minus")
