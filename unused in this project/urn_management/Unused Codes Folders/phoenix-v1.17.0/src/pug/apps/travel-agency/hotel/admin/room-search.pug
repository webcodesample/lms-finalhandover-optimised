          ]
        +Search({placeholder: 'Search Room'}).w-100
        .list
          each item in roomCategories
            .form-check.mt-3
              input.form-check-input(type="checkbox" value="" id=`${item.split(" ").join("-")}`)
              label.form-check-label.fs-8.text-body-highlight.bed(for=`${item.split(" ").join("-")}`)= item
        a(href="#!").mt-2.fw-bold.d-inline-block Show more items

    a.btn.px-0.py-2.d-flex.align-items-center.collapse-indicator.mt-3(data-bs-toggle='collapse' href='#collapseAmenities' role='button' aria-expanded='false' aria-controls='collapseAmenities')
      span.fa-solid.fa-caret-down.toggle-icon.text-body.me-2
      .fs-8.text-body-highlight Amenities
    .collapse#collapseAmenities
      div(data-list!={
        valueNames: ["amenities"]
      })
        -
          var roomCategories = [
            "Wifi",
            "Washer",
            "Kitchen",
            "Dryer",
            "Air conditioning",
            "Heating"
          ]
        +Search({placeholder: 'Search Room'}).w-100
        .list
          each item in roomCategories
            .form-check.mt-3
              input.form-check-input(type="checkbox" value="" id=`${item.split(" ").join("-")}`)
              label.form-check-label.fs-8.text-body-highlight.amenities(for=`${item.split(" ").join("-")}`)= item
        a(href="#!").mt-2.fw-bold.d-inline-block Show more items
    .sticky-bottom.bg-body.pt-4.pb-4.pb-xl-0
      button.btn.btn-phoenix-secondary.me-2 Reset
      button.btn.btn-primary.px-7 Apply